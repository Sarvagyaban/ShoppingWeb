<% layout('./layout/boilerplate') -%>

<div class="container">

        <div class="row">

            <% for(const product of products) { %>

                <div class="card col-3 mx-auto mt-4 " style="width: 18rem;">

                    <img src="<%= product.img  %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"> <%= product.name %> </h5>
                      
                      <p class="card-text"> <%= product.desc %></p>

                      <h5 class="card-title">Rs : <%= product.price %> </h5>

                      <button type="button" class="btn btn-primary my-2">Buy Now</button>

                      <form method="post"  action="/products/<%=product._id %>?_method=DELETE">



                      </form>







                    </div>
                 
            
                    </div>

                    <% } %>
            
                </div>

            </div>

                  

  

